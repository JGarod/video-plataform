// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model usuario{
  id Int @id @default(autoincrement())
  username String @db.VarChar(255) @unique
  profile String? @default("https://w7.pngwing.com/pngs/340/956/png-transparent-profile-user-icon-computer-icons-user-profile-head-ico-miscellaneous-black-desktop-wallpaper-thumbnail.png")
  user_comentario user_comentario[]
  interaction interaction[]
  coment_from_coment coment_from_coment[]
  video video[]
}

model admin{
  id Int @id @default(autoincrement())
  username String @db.VarChar(255) @unique
}

model video{
  id Int @id @default(autoincrement())
  views Int 
  src String
  user_A    usuario?    @relation(fields: [user_author], references: [id])
  user_author  Int
  fecha DateTime   @default(now())
  title String
  descripcion String
  contenido_extra BonusContent[]
  user_comentario user_comentario[]
  interaction interaction[]
}

model interaction{
  id Int @id @default(autoincrement())
  user_Interaction    usuario?    @relation(fields: [user_id], references: [id])
  user_id  Int
  video_Interaction    video?    @relation(fields: [videoId], references: [id])
  videoId  Int
}

model BonusContent{
  id Int @id @default(autoincrement())
  videoR    video?    @relation(fields: [videoId], references: [id])
  videoId  Int
  descripcion String 
  file String
}


model user_comentario{
  id Int @id @default(autoincrement())
  videoR    video?    @relation(fields: [videoId], references: [id])
  videoId  Int
  userR    usuario?    @relation(fields: [user_id], references: [id])
  user_id  Int
  fecha DateTime   @default(now())
  comment String @db.VarChar(255)
  coment_from_coment coment_from_coment[]

}

model coment_from_coment{
  id Int @id @default(autoincrement())
  comentarioR    user_comentario?    @relation(fields: [comentarioId], references: [id])
  comentarioId Int
  userR2    usuario?    @relation(fields: [user_id], references: [id])
  user_id  Int
  fecha DateTime   @default(now())
  comment String @db.VarChar(255)
}


